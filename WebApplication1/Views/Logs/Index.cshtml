@{
    ViewData["Title"] = "View project requests";
}

<style>
    table {
        border-spacing: 0 15px;
        align-self: center;
    }

    th {
        background-color: #4287f5;
        color: white;
    }

    th,
    td {
        width: 250px;
        text-align: center;
        border: 1px solid black;
        padding: 5px;
    }

        td.url {
            width: 500px;
            text-align: left;
        }

    h2 {
        color: #4287f5;
    }
</style>

<div class="text-center">
    <h2 class="display-4" style="text-align: left">История запросов</h2>
    <br>
    <table>
        <tr>
            <td>Идентификатор</td>
            <td>Дата</td>
            <td>URL</td>
        </tr>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.Date</td>
                <td class="url">@request.Url</td>
            </tr>
        }
    </table>
</div>
